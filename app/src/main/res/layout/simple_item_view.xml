<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_itemview_height">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_separator_height"
        android:background="@color/manatee_grey"/>

    <TextView
        android:id="@+id/simple_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/marge_large"
        android:layout_marginEnd="@dimen/marge_large"
        android:layout_gravity="center"
        android:gravity="center"/>

</LinearLayout>