<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Leanback">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullTranslucent" parent="AppTheme">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:background">@null</item>
    </style>

    <style name="ThemeUgcLeanbackPreferences" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="FullButtonStyle" parent="@style/UgcButtonStyle">
        <item name="android:background">@drawable/button_full_selector</item>
        <item name="android:paddingStart">@dimen/padding_standard</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="RoundButtonStyle" parent="@style/UgcButtonStyle">
        <item name="android:background">@drawable/round_button</item>

    </style>

    <style name="UgcButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RoundedEditTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textColorHint">@color/manatee_grey</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingStart">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/small</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <dimen name="small">8dp</dimen>
</resources>
